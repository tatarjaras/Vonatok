<Window x:Class="VonatokWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VonatokWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="Vonalszám"/>
            <ComboBox Name="cbxvonalszam" SelectionChanged="cbxvonalszam_SelectionChanged"/>
            <Button Content="Mentés" Name="btnMentés" Click="btnMentés_Click"/>
        </StackPanel>
        <TextBlock x:Name="tbkadatok" Grid.Column="1" Text="Kérem, válasszon egy vonalszámot"/>
    </Grid>
</Window>
